#include <iostream>
using namespace std;

class Node {
public:
    int data;
    Node* next;
    Node(int value) {
        data = value;
        next = NULL;
    }
};

int main() {
    Node* Head = NULL;

    int arr[] = {2, 4, 6, 8, 10};

    for (int i = 0; i < 5; i++) {
        if (Head == NULL) {
            Head = new Node(arr[i]);
        } else {
            Node* temp = new Node(arr[i]);  // use arr[i] instead of 5
            temp->next = Head;
            Head = temp;
        }
    }

    // print the list
    Node* temp = Head;
    while (temp) {
        cout << temp->data << " ";
        temp = temp->next;
    }
}

output // 10 8 6 4 2

List is reversed because you're inserting at head  

#include <iostream>
using namespace std;

class Node {
public:
    int data;
    Node* next;

    Node(int value) {
        data = value;
        next = NULL;
    }
};

int main() {
    Node* Head = NULL;
    Node* Tail = NULL;   // maintain tail pointer for insertion in original order

    int arr[] = {2, 4, 6, 8, 10};

    for (int i = 0; i < 5; i++) {
        Node* newNode = new Node(arr[i]);

        // first node
        if (Head == NULL) {
            Head = newNode;
            Tail = newNode;
        }
        else {
            Tail->next = newNode; // append at end
            Tail = newNode;
        }
    }

    // print list
    Node* temp = Head;
    while (temp != NULL) {
        cout << temp->data << " ";
        temp = temp->next;
    }
}
